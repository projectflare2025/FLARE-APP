<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.FLARECAPSTONE" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- FLARE Branding -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Edge-to-Edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Override default text color in TextInputLayout -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.FilledBox</item>

    </style>

    <style name="Theme.FLARECAPSTONE" parent="Base.Theme.FLARECAPSTONE" />

    <style name="ThemeOverlay.FLARECAPSTONE.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
