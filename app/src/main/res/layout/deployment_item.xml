<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    android:background="@drawable/rounded_card_background">

    <!-- LEFT ICON -->
    <ImageView
        android:id="@+id/deployIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/station_logo"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- RIGHT MESSAGE / INBOX ICON -->
    <ImageView
        android:id="@+id/messageIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/departed_icon"
        android:padding="4dp"
        android:contentDescription="Open Message"
        app:tint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- RIGHT DEPARTED ICON (LEFT OF MESSAGE ICON) -->
    <ImageView
        android:id="@+id/departedIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_message"
        android:padding="4dp"
        android:contentDescription="Departed"
        app:tint="@color/primaryColor"
        app:layout_constraintEnd_toStartOf="@id/messageIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- PURPOSE TEXT -->
    <TextView
        android:id="@+id/tvPurpose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:text="Opening Lights"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/deployIcon"
        app:layout_constraintEnd_toStartOf="@id/departedIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DATE TEXT -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date: Jan 20, 2025"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/deployIcon"
        app:layout_constraintEnd_toStartOf="@id/departedIcon"
        app:layout_constraintTop_toBottomOf="@id/tvPurpose" />

</androidx.constraintlayout.widget.ConstraintLayout>
