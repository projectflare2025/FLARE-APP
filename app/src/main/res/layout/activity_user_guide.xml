<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="User Guide"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_backed"
        android:contentDescription="@string/content_desc_navigate_up"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Map Icon Locations -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapIconsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardForegroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- title row with icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_map_pin_24"
                            app:tint="?attr/colorError"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/content_desc_icon_map_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map Icon Locations"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Blue Pin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_user_location"
                            android:contentDescription="@string/content_desc_icon_current_loc"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red Pin — Current location"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <!-- Yellow Pin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_station_shortest"
                            android:contentDescription="@string/content_desc_icon_near_station"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yellow Fire Station — Near Fire Station"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <!-- Brown Pin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_station_longest"
                            android:contentDescription="@string/content_desc_icon_far_station"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brown Fire Station — Far Fire Station"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reporting a Fire -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reportFireCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardForegroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_fire_24"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/content_desc_icon_fire_title"
                            app:tint="?attr/colorError"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporting a Fire"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="1) Tap the Fire Report button.\n2) Select Involve (House on Fire, etc.).\n3) Capture Photo (Optional) \n4) Tap Send to submit or Cancel to discard."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

<!--                    &lt;!&ndash; Title aligned bottom right &ndash;&gt;-->
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:gravity="end"-->
<!--                        android:layout_marginTop="12dp"-->
<!--                        android:text="Tutorial"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="16sp"-->
<!--                        android:textColor="#E00024"/>-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Reporting Other Emergencies -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reportOtherCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardForegroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_warning_24"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/content_desc_icon_other_title"
                            app:tint="?attr/colorError"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporting Other Emergencies"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="1) Tap the Other Emergency Report button.\n2) Select Involve (Flood, etc.).\n3) Capture Photo (Optional) \n4) Tap Send to submit or Cancel to discard."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Title aligned bottom right -->
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:gravity="end"-->
<!--                        android:layout_marginTop="12dp"-->
<!--                        android:text="Tutorial"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="16sp"-->
<!--                        android:textColor="#E00024"/>-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Reporting Emergency Medical Services -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reportEmsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardForegroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_ambulance_24"
                            android:layout_marginEnd="8dp"
                            app:tint="?attr/colorError"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporting Emergency Medical Services"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="1) Tap the EMS Report button.\n2) Select Involve (Vehicular, etc.).\n3) Capture Photo (Optional) \n4) Tap Send to submit or Cancel to discard."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Title aligned bottom right -->
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:gravity="end"-->
<!--                        android:layout_marginTop="12dp"-->
<!--                        android:text="Tutorial"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="16sp"-->
<!--                        android:textColor="#E00024"/>-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Reporting Emergency Medical Services -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reporSmsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardForegroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_ambulance_24"
                            android:layout_marginEnd="8dp"
                            app:tint="?attr/colorError"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporting Sms"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="1) Tap the Click Here SMS Report in the login/register.\n2) Fill up name.\n3) Fill up location.\n4) Select Emergency (Fire Report, etc.).\n5) Select Involve.\n6) Tap Send to submit."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Title aligned bottom right -->
                    <!--                    <TextView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:gravity="end"-->
                    <!--                        android:layout_marginTop="12dp"-->
                    <!--                        android:text="Tutorial"-->
                    <!--                        android:textStyle="bold"-->
                    <!--                        android:textSize="16sp"-->
                    <!--                        android:textColor="#E00024"/>-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
