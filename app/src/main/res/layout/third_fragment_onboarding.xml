<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN WHITE ONBOARD CARD -->
    <LinearLayout
        android:id="@+id/tutorialCardStep2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_onboard_white"
        android:padding="28dp"
        android:clipToOutline="true"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEADLINE -->
        <TextView
            android:id="@+id/tutorialHeadlineStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Your Location"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:letterSpacing="0.02"
            android:layout_marginBottom="6dp"/>

        <!-- SUBHEADLINE -->
        <TextView
            android:id="@+id/tutorialSubHeadlineStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatically sent to responders"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_marginBottom="26dp"/>

        <!-- IMAGE / SCREENSHOT -->
        <ImageView
            android:id="@+id/tutorialImageStep2"
            android:layout_width="240dp"
            android:layout_height="460dp"
            android:src="@drawable/ic_logo"
        android:contentDescription="Tutorial Step 2 Screenshot"
        android:scaleType="fitCenter"
        android:layout_marginBottom="24dp"/>

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/tutorialDescriptionStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLARE automatically sends your real-time location to the nearest responders so they can reach you faster — even if you’re unable to talk."
            android:textSize="15sp"
            android:textColor="#555"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:alpha="0.95"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
