<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CARD / WHITE ROUNDED BACKGROUND -->
    <LinearLayout
        android:id="@+id/tutorialCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:background="@drawable/bg_onboard_white"
        android:clipToOutline="true"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEADLINE SECTION -->
        <TextView
            android:id="@+id/tutorialHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started with FLARE"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:letterSpacing="0.02"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tutorialSubHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn how to report emergencies quickly"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_marginBottom="26dp" />

        <!-- CENTER TUTORIAL IMAGE -->
        <ImageView
            android:id="@+id/tutorialImage"
            android:layout_width="240dp"
            android:layout_height="460dp"
            android:contentDescription="Tutorial Screenshot"
            android:src="@drawable/ic_logo"
        android:scaleType="fitCenter"
        android:layout_marginBottom="24dp"/>

        <!-- DESCRIPTION TEXT -->
        <TextView
            android:id="@+id/tutorialDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap the main Report button to instantly notify responders of a fire in your area. FLARE automatically attaches your location for faster response."
            android:textSize="15sp"
            android:textColor="#555"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:alpha="0.95"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
