<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Back Button"
        android:src="@drawable/ic_back"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fire Incident Report"
        android:textColor="@color/primaryColor"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Step Indicator -->
    <TextView
        android:id="@+id/stepIndicatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 5: Location / Property Information"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Provide the details of the property involved in the incident, including establishment information and land area."
        android:textSize="14sp"
        android:textColor="@color/hintTextColor"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/stepIndicatorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 5 of 5"
            android:textSize="14sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:progress="100"
            android:max="100"
            android:progressTint="@color/primaryColor"
            style="?android:attr/progressBarStyleHorizontal" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintBottom_toTopOf="@id/btnCompleteReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION / PROPERTY INFORMATION"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:layout_marginBottom="12dp" />

            <!-- Name of Establishment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Establishment"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/establishmentNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter name of establishment"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="textCapWords"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Owner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/ownerInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter name of owner"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Occupant -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupant"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/occupantInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter name of occupant/s"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Land Area Involved -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Land Area Involved (sq. meters)"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/landAreaInvolvedInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter land area in sq. meters"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Complete Button -->
    <Button
        android:id="@+id/btnCompleteReport"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="COMPLETE REPORT"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_background"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
