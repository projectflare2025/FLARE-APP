<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.FirefighterActivity"
    tools:ignore="MissingClass">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- NAV HOST -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_firefighter"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_firefighter"
            app:navGraph="@navigation/nav_graph_firefighter" />

        <!-- CUSTOM CURVED BOTTOM NAVIGATION -->
        <np.com.susanthapa.curved_bottom_navigation.CurvedBottomNavigationView
            android:id="@+id/bottom_navigation_firefighter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cbn_bg="@color/black"
            app:cbn_fabBg="@color/redFire"
            app:cbn_selectedColor="@color/white"
            app:cbn_unSelectedColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
