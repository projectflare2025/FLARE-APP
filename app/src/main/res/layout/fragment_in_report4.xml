<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Back Button"
        android:src="@drawable/ic_back"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fire Incident Report"
        android:textColor="@color/primaryColor"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Step Indicator -->
    <TextView
        android:id="@+id/stepIndicatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 4: Response Details"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Provide the response timeline, ground commander, and resource details used during the incident."
        android:textSize="14sp"
        android:textColor="@color/hintTextColor"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/stepIndicatorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4 of 5"
            android:textSize="14sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:progress="80"
            android:max="100"
            android:progressTint="@color/primaryColor"
            style="?android:attr/progressBarStyleHorizontal" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintBottom_toTopOf="@id/btnFinishReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESPONSE DETAILS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:layout_marginBottom="12dp" />

            <!-- Time Departed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Departed"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/timeDepartedInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tap to select time departed"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Time Arrival -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Arrival"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/timeArrivalInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tap to select time arrival"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Fire Under Control (Time) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Under Control (Time)"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/fireUnderControlTimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tap to select time"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Fire Out (Time) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Out (Time)"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/fireOutTimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tap to select time"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Ground Commander -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ground Commander"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/groundCommanderInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter ground commander's name"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- No. of Firetrucks Responded -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Firetrucks Responded"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/firetrucksRespondedInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter number of firetrucks"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- List of Responders -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of Responders"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/listOfRespondersInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:hint="Enter names and positions of responders"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="textMultiLine"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Fuel Consumed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Consumed (Liters)"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/fuelConsumedInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter fuel consumed in liters"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Distance of Fire Scene -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance of Fire Scene (km)"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/distanceOfFireSceneInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter distance in kilometers"
                    android:textColorHint="@color/hintTextColor"
                    android:textColor="@color/primaryTextColor"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Finish Button (keeps original id) -->
    <Button
        android:id="@+id/btnFinishReport"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="FINISH REPORT"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_background"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
