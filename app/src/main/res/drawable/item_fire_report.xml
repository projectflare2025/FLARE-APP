<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_card_background"
    android:padding="16dp">

    <!-- Icon (fire or user) -->
    <ImageView
        android:id="@+id/reportIconImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_fire"
    android:layout_marginEnd="16dp"
    android:contentDescription="Report Icon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Reporter Name -->
    <TextView
        android:id="@+id/reporterNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reporter Name"
        android:textSize="16sp"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/reportIconImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reportStatusText"
        app:layout_constraintHorizontal_bias="0.0"/>

    <!-- Status chip (Pending / Complete / etc.) -->
    <TextView
        android:id="@+id/reportStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:background="@drawable/status_chip_background"
    android:textColor="@android:color/white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Type + Category -->
    <TextView
        android:id="@+id/reportTypeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fire Type • Category"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/reportIconImage"
        app:layout_constraintTop_toBottomOf="@id/reporterNameText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date & Time -->
    <TextView
        android:id="@+id/reportDateTimeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dec 12, 2024 • 3:21 PM"
        android:textSize="13sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/reportIconImage"
        app:layout_constraintTop_toBottomOf="@id/reportTypeText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Location -->
    <TextView
        android:id="@+id/reportLocationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Canocotan, Davao City"
        android:textSize="13sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/reportIconImage"
        app:layout_constraintTop_toBottomOf="@id/reportDateTimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
