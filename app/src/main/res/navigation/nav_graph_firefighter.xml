<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firefighter_nav_graph"
    app:startDestination="@id/homeFireFighterFragment">

    <!-- ===================== -->
    <!--        HOME           -->
    <!-- ===================== -->
    <fragment
        android:id="@+id/homeFireFighterFragment"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitHomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_deployment"
            app:destination="@id/unitDeploymentFragment" />

        <action
            android:id="@+id/action_home_to_inbox"
            app:destination="@id/inboxFireFighterFragment" />

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profileFireFighterFragment" />
    </fragment>

    <!-- ===================== -->
    <!--   UNIT DEPLOYMENT     -->
    <!--       (NEW TAB)       -->
    <!-- ===================== -->
    <fragment
        android:id="@+id/unitDeploymentFragment"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitDeploymentFragment"
        android:label="Deployment">

        <action
            android:id="@+id/action_deployment_to_home"
            app:destination="@id/homeFireFighterFragment" />

        <action
            android:id="@+id/action_deployment_to_inbox"
            app:destination="@id/inboxFireFighterFragment" />

        <action
            android:id="@+id/action_deployment_to_profile"
            app:destination="@id/profileFireFighterFragment" />
    </fragment>

    <!-- ===================== -->
    <!--  FIRE FIGHTER REPORT  -->
    <!-- ===================== -->
    <fragment
        android:id="@+id/fireFighterReportFragment"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitReportFragment"
        android:label="FireFighter Report" />
    <!-- Back button will pop to Profile if navigated from there -->

    <!-- ===================== -->
    <!--  DEPLOY REPORT (NEW)  -->
    <!-- ===================== -->
    <fragment
        android:id="@+id/fireFighterDeployReport"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitDeployReport"
        android:label="Deploy Report" />
    <!-- Same, back → Profile -->

    <!-- ===================== -->
    <!--        INBOX          -->
    <!-- ===================== -->
    <fragment
        android:id="@+id/inboxFireFighterFragment"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitInboxFragment"
        android:label="Inbox">

        <action
            android:id="@+id/action_inbox_to_home"
            app:destination="@id/homeFireFighterFragment" />

        <action
            android:id="@+id/action_inbox_to_deployment"
            app:destination="@id/unitDeploymentFragment" />

        <action
            android:id="@+id/action_inbox_to_profile"
            app:destination="@id/profileFireFighterFragment" />

        <action
            android:id="@+id/action_inbox_to_response"
            app:destination="@id/fireFighterResponseActivity" />
    </fragment>

    <!-- ===================== -->
    <!--        PROFILE        -->
    <!-- ===================== -->
    <fragment
        android:id="@+id/profileFireFighterFragment"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitProfilerFragment"
        android:label="Profile">

        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/homeFireFighterFragment" />

        <action
            android:id="@+id/action_profile_to_deployment"
            app:destination="@id/unitDeploymentFragment" />

        <action
            android:id="@+id/action_profile_to_inbox"
            app:destination="@id/inboxFireFighterFragment" />

        <!-- From Profile → My Report -->
        <action
            android:id="@+id/action_profile_to_report"
            app:destination="@id/fireFighterReportFragment" />

        <!-- From Profile → Deploy Report -->
        <action
            android:id="@+id/action_profile_to_deploy"
            app:destination="@id/fireFighterDeployReport" />
    </fragment>

    <!-- ===================== -->
    <!--  FIRE FIGHTER RESPONSE ACTIVITY -->
    <!-- ===================== -->
    <activity
        android:id="@+id/fireFighterResponseActivity"
        android:name="com.example.flare_capstone.views.fragment.unit.UnitResponseActivity"
        android:label="FireFighter Response Activity" />

</navigation>
